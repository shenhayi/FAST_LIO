<launch>
<!-- Launch file for Livox MID360 LiDAR with rosbag playback -->

	<arg name="rviz" default="true" />
	<arg name="bag_file" default="/home/haoyus/data/go2_test/box_FP_lio_1.bag" />
	<arg name="bag_rate" default="1.0" />
	<arg name="bag_start_delay" default="2.0" />
	
	<!-- Set use_sim_time to true so all nodes use bag time -->
	<param name="/use_sim_time" value="true" />
	
	<!-- Start rosbag playback with clock -->
	<node pkg="rosbag" type="play" name="rosbag_play" 
	      args="--clock --rate $(arg bag_rate) --delay $(arg bag_start_delay) $(arg bag_file)"
	      output="screen"
	      required="true" />

	<!-- Load FAST-LIO configuration -->
	<rosparam command="load" file="$(find fast_lio)/config/mid360.yaml" />

	<param name="feature_extract_enable" type="bool" value="0"/>
	<param name="point_filter_num" type="int" value="3"/>
	<param name="max_iteration" type="int" value="3" />
	<param name="filter_size_surf" type="double" value="0.5" />
	<param name="filter_size_map" type="double" value="0.5" />
	<param name="cube_side_length" type="double" value="1000" />
	<param name="runtime_pos_log_enable" type="bool" value="0" />
	
	<!-- Delay start to wait for bag clock to be available -->
	<node pkg="fast_lio" type="fastlio_mapping" name="laserMapping" output="screen"
	      launch-prefix="bash -c 'sleep $(arg bag_start_delay); $0 $@' " />

	<group if="$(arg rviz)">
		<node pkg="rviz" type="rviz" name="rviz" 
		      args="-d $(find fast_lio)/rviz_cfg/loam_livox.rviz"
		      launch-prefix="bash -c 'sleep $(arg bag_start_delay); nice $0 $@' " />
	</group>

</launch>

